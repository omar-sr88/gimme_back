<% provide(:title, @user.name) %>

<div class="container-fluid">
        <!-- Page Heading -->
    <div class="row">
       	<div class="col-lg-12">


<% if current_user.id.to_s == params[:id] %>
	<div class="page-header">
	    <h1><%= t(:personal_info) %>  <span><%= link_to t(:edit) + " Info", edit_user_path(@user) , :class => "btn btn-success" %></span></h1>
	</div>
	<div>
		<%= gravatar_for @user %>
	  <p><%= t(".name") %>: <%= @user.name %></p>
	  <p><%= t(".username") %>: <%= @user.nick %></p>
	  <p><%= t(".joined_in") %> <%= @user.created_at.to_s %></p>
	</div>
<% end %>


<div class="page-header">
    <h1><%= t(:contact_info) %></h1>
</div>
<div>

	<p><%= t(".name") %>: <%= @user.name %></p>
	<p><%= t(".username") %>: <%= @user.nick %></p>
	<p><%= t(".phone") %>: <%= @user.info.phone_number if @user.info%> <p>

</div>


		</div>
	</div>
</div>